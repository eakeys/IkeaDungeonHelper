<GuiXml>
  <Controls>
    <TopLevelControl name="IDH_UI" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
      <Dimensions x="600" y="100" />
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" offsetX="100" offsetY="100" />
		
		<OnMoveStop>
			IDH.SaveDragLocation()
		</OnMoveStop>
		
      <Controls>
        <Label name="IDH_UILineI" width="600" height="25" font="ZoFontWinH1" inheritAlpha="true" color="FFFFFF"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Ikea Dungeon Helper">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
		
    <Label name="IDH_UILineII" width="600" height="25" font="ZoFontWinH1" inheritAlpha="true" color="00FF00"
			wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Sample main message">
			<Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="25"/>
		</Label>

      </Controls>
    </TopLevelControl>

    <TopLevelControl name="IDHProminent" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
      <Dimensions x="500" y="100" />
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" offsetX = "1000" offsetY="400" />

      <OnMoveStop>
        IDH.SaveDragLocation()
      </OnMoveStop>

      <Controls>
        <Label name="$(parent)Label" width="600" height="50" inheritAlpha="true" color="FF0000" font="$(BOLD_FONT)|72|soft-shadow-thick"
          wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="PROMINENT ALERT">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
      </Controls>
    </TopLevelControl>

    <TopLevelControl name="IDHStatus" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
      <Dimensions x="600" y="200" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-150" offsetX="600" />

      <OnMoveStop>
        IDH.SaveDragLocation()
      </OnMoveStop>

      <Controls>
        <Label name="$(parent)Timer1" width="600" height="50" font="ZoFontWinH1" alpha="0.85" color="FFFFFF"
          wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT" text="Timer 1: 8.1s">
            <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="0" />
        </Label>
        <Label name="$(parent)Timer2" width="600" height="50" font="ZoFontWinH1" alpha="0.85" color="FFFFFF"
          wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT" text="Timer 2: 12s">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="40" />
        </Label>
      </Controls>
    </TopLevelControl>

  </Controls>
</GuiXml>